<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ðŸŒ Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TowAppMVP"
        tools:targetApi="34">

        <!-- ðŸš€ Splash Screen (launcher entry) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.TowAppMVP">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ðŸ” Auth Screens -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:exported="true"/>

        <!-- ðŸ  Main Screen -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- ðŸš— Other App Screens -->
        <activity android:name=".RequestTowActivity" android:exported="false" />
        <activity android:name=".TrackTowActivity" android:exported="false" />
        <activity android:name=".CarSearchActivity" android:exported="false" />
        <activity android:name=".SosActivity" android:exported="false" />
        <activity android:name=".BookServiceActivity" android:exported="false" />
        <activity android:name=".ClientPartnershipActivity" android:exported="false" />
        <activity android:name=".ContactActivity" android:exported="false" />

        <!-- ðŸ—ºï¸ Google Maps API -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

    </application>
</manifest>
